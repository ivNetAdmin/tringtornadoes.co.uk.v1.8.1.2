@model dsc.CalendarWidget.Models.CalendarWidgetPartQueries

@using dsc.CalendarWidget.Models;
@using Orchard.Projections.Models;
@using Orchard.ContentManagement;

<fieldset>
    <label for="@Html.FieldIdFor(m=>m.QueryId)">Query</label>
    <select id="@Html.FieldIdFor(m=>m.QueryId)" name="@Html.FieldNameFor(m=>m.QueryId)">
        @foreach (QueryPart part in Model.Queries)
        {
            @Html.SelectOption(Model.QueryId, part.Record.Id, part.Name)
        }
    </select>
    <span class="hint">The query that contains the data to show in the calendar view.</span>

</fieldset>