@using ivNet.Webstore.ViewModels
@{
    var signup = (SignupVM)Model.Signup;
}

<div id="customer-signup-form">
    <h2>@T("New customer")</h2>
    <p>@T("Please fill out the form below")</p>

    @Html.ValidationSummary()

    @using (Html.BeginFormAntiForgeryPost(Url.Action("Signup", "Checkout", new { area = "ivNet.Webstore" })))
    {

        <article class="form">

            <table>
                <tbody>
                    <tr>
                        <td>Title</td>
                        <td>@Html.EditorFor(m => signup.Title)</td>
                    </tr>
                    <tr>
                        <td>First Name</td>
                        <td>@Html.EditorFor(m => signup.FirstName)</td>
                    </tr>
                    <tr>
                        <td>Last Name</td>
                        <td>@Html.EditorFor(m => signup.LastName)</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>@Html.EditorFor(m => signup.Email)</td>
                    </tr>
                    <tr>
                        <td />
                        <td>@Html.EditorFor(m => signup.Password)</td>
                    </tr>
                    <tr>
                        <td />
                        <td>@Html.EditorFor(m => signup.RepeatPassword)</td>
                    </tr>
                </tbody>
            </table>


            @*<fieldset>
                    <ul>
                        <li>@Html.EditorFor(m => signup.Title)</li>
                        <li>@Html.EditorFor(m => signup.FirstName)</li>
                        <li>@Html.EditorFor(m => signup.LastName)</li>

                    </ul>
                </fieldset>*@

            @*<fieldset>
                    <ul>
                        <li>@Html.EditorFor(m => signup.Email)</li>
                        <li>@Html.EditorFor(m => signup.Password)</li>
                        <li>@Html.EditorFor(m => signup.RepeatPassword)</li>
                    </ul>
                </fieldset>*@

            <fieldset>
                <ul>
                    <li>@Html.EditorFor(m => signup.ReceiveNewsletter)</li>
                    <li>@Html.EditorFor(m => signup.AcceptTerms)</li>
                </ul>
            </fieldset>

            <footer class="commands">
                <ul>
                    <li class="align left"><a href="@Url.Action("Index", "ShoppingCart", new { area = "ivNet.Webstore" })">@T("Cancel")</a></li>
                    <li class="align right"><button type="submit">@T("Next")</button></li>
                </ul>
            </footer>

        </article>
    }
</div>