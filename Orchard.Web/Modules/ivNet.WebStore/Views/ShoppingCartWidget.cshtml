@{
    Style.Require("Webstore.ShoppingCart");
    
    var itemCount = (int) Model.ItemCount;
    var totalAmount = (decimal) Model.TotalAmount;

}
<article>
    <span class="label">Items:</span> <span class="item-count-value">@itemCount</span><br/>
    <span class="label">Amount:</span> <span class="total-ammount-value">@totalAmount.ToString("c")</span><br/>
    <div class="group">
        <div class="align right">
            <a href="@Url.Action("Index", "ShoppingCart", new { area = "ivNet.Webstore" })">View shoppingcart</a>
        </div>
    </div>
</article>